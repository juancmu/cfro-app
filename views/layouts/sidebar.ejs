                  <%};  %>

                <a href="/<%= element.area %>"  class="nav-item nav-link <%= activeP %>">

                  <i class="nav-icon <%= element.coloricon %> <%= element.icon %> "></i>
                                      <%= element.area %>
                    <span class="right badge badge-danger"></span>
                    
                   
                </a>
              </li>
             
              <%           });   %>

          
        </div>
    </nav>
</div>

