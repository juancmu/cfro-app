<div class="container-fluid pt-2 px-2 card bg-transparent">
  <div class="d-flex align-items-center justify-content-between bg-secondary rounded p-1 card-header">
  <h5>AREAS</h5>
    
  <div class="card-tools p-2">
    <button type="button" class="btn btn-tool" data-card-widget="collapse">
      <i class="fas fa-minus"></i>
    </button>
  </div>
</div>
    <div class="row g-4 card-body"> 
  
  

      
      <% areas.forEach(element => {  %>
        <div class="col-sm-6 col-xl-3">
          <a href="/<%= element.area %>"  class="">
            <div class="bg-gray-pearl rounded d-flex align-items-center bd-<%= element.coloricon %> justify-content-between p-2">
                <i class="<%= element.icon %> fa-3x text-<%= element.coloricon %>"></i>
                <div class="ms-1">
                    <h5 class="mb-auto text-dark"><%= element.area %></h5>
                    <h6 class="mb-0 text-dark"><%= element.item %></h6>
                    <h6 class="text-<%= element.coloricon %>"> <%= element.data_dash_1 %> <%= element.value_1 %> <%= element.units %></h6>
                    <h6 class="text-danger"> <%= element.data_dash_2 %> <%= element.value_2 %> <%= element.units %></h6>
                </div>
            </div>
          </a>
        </div>
        <%               });   %>
    </div>
  </div>

